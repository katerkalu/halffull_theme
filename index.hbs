{{!< default}}

<main class="content" role="main">

    {{#foreach posts}}

    <article class="preview">
        <header>
			<div class="post-meta"><time class="post-date" datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}">{{date published_at format="DD.MM.YYYY"}}</time></div>
            <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
        </header>
        <section class="post-content">
			{{#if feature_image}}
				<a href="{{url}}"><img src="{{img_url feature_image}}" class="feature_image"></a>
			{{/if}}
            <p>{{content}}</p>
			
			{{#if tags}}<div class="post-data tags">{{tags prefix="" separator=""}}</div>{{/if}}
        </section>
    </article>

    {{/foreach}}

    {{pagination}}

</main>