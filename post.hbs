{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

        <header>
        <div class="post-meta"><time class="post-date" datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}">{{date published_at format="DD.MM.YYYY"}}</time></div>
        <h1 class="post-title">{{{title}}}</h1>
        </header>

        <section class="post-content">
			{{#if feature_image}}
				<a href="#" data-featherlight="{{img_url feature_image}}"><img src="{{img_url feature_image}}" class="feature_image"></a>
			{{/if}}
            <p>{{content}}</p>
			
			{{#if tags}}<div class="tagwrapper"><div class="post-data tags">Tags: {{tags prefix="" separator=", "}}</div></div>{{/if}}
        </section>
		
		<section class="post-nav">
			{{#prev_post}}
				<div class="post-nav-left"><a href="{{url}}"><span class="post-nav-arrows">&#xab; previous</span><span class="post-nav-link">{{title}}</span></a></div>
			{{/prev_post}}

			{{#next_post}}
				<div class="post-nav-right"><a href="{{url}}"><span class="post-nav-arrows">next &#xbb;</span><span class="post-nav-link">{{title}}</span></a></div>
			{{/next_post}}
		</section>

        <footer class="post-footer">
		

            {{#if primary_author}}
            <section class="author">
				<h3>Written by...</h3>
                <div class="authorimage" style="background: url({{primary_author.profile_image}})"></div>
				<div class="authordesc">
					<h4><a href="{{primary_author.website}}">{{primary_author.name}}</a></h4>
					<p class="bio">{{primary_author.bio}}</p>
					<p class="authorlinks">{{#if twitter}}<a href="{{twitter_url}}">{{twitter}}</a>{{/if}}</p>
				</div>
			</section>
            {{/if}}

        </footer>

        {{/post}}

        {{!> comments-disqus}}
        {{!> comments-facebook}}
        {{!> comments-google-plus}}

    </article>

</main>
