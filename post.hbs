{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

        <header>
        <div class="post-meta">
			{{#if featured}}<span style="color: #ff8c00;"><i class="fas fa-fire" title="FEATURED POST!"></i></span>{{/if}}
			<time class="post-date" datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}">{{date published_at format="DD.MM.YYYY"}}</time> | 
			{{#primary_tag}}
				<a href="{{url}}" title="{{name}} tag archive link">{{name}}</a>
			{{/primary_tag}}
		</div>
        
			<h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
		
        </header>

        <section class="post-content">
			{{#if feature_image}}
				<a href="#" class="feature_image_link" data-featherlight="{{img_url feature_image size="xl"}}"><img class="feature_image" srcset="{{img_url feature_image size="s"}} 324w,
                    {{img_url feature_image size="m"}} 560w,
                    {{img_url feature_image size="l"}} 1024w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="(max-width: 1000px) 324px, 560px"
            src="{{img_url feature_image size="m"}}"
            alt="{{title}}"></a>
			{{/if}}
            {{content}}
			
			<div class="tagwrapper">
				{{#if tags}}
					<div class="post-data tags">Tags: {{tags prefix="" separator=", "}}</div>
				{{/if}}
				<div class="postshare">
					<ul>
					<li class="postshare-fb">
						<a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share', 'width=580, height=296'); return false;"><i class="fab fa-facebook"></i></a>
					</li>
					<li class="postshare-tw">
						<a href="https://twitter.com/share?text={{encode title}}&url={{url absolute='true'}}" onclick="window.open(this.href, 'twitter-share', 'width=550, height=235'); return false;"><i class="fab fa-twitter"></i></a>
					</li>
					</ul>
				</div>
			</div>
        </section>
		
		<section class="post-nav">
			{{#prev_post}}
				<div class="post-nav-left"><a href="{{url}}"><span class="post-nav-arrows">&#xab; previous</span><span class="post-nav-link">{{title}}</span></a></div>
			{{/prev_post}}

			{{#next_post}}
				<div class="post-nav-right"><a href="{{url}}"><span class="post-nav-arrows">next &#xbb;</span><span class="post-nav-link">{{title}}</span></a></div>
			{{/next_post}}
		</section>

        <footer class="post-footer">
		

            {{#primary_author}}
            <section class="author">
                <div class="authorimage" style="background: url({{profile_image}})"></div>
				<div class="authordesc">
					<h4><a href="{{url}}">{{name}}</a></h4>
					<p class="bio">{{bio}}</p>
					<ul class="authorlinks">
						{{#if twitter}}<li><a href="{{twitter_url}}" class="social-twitter"><i class="fab fa-twitter" title="author twitter icon"></i></a></li>{{/if}}
						{{#if facebook}}<li><a href="{{facebook_url}}" class="social-facebook"><i class="fab fa-facebook" title="author facebook icon"></i></a></li>{{/if}}
						{{#if website}}<li><a href="{{website}}"><i class="fas fa-anchor" title="author website icon"></i></a></li>{{/if}}
					</ul>
				</div>
			</section>
            {{/primary_author}}

        </footer>

        {{/post}}

    </article>

</main>
