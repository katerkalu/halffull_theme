{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

        <header>
        <div class="post-meta"><time class="post-date" datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}">{{date published_at format="DD.MM.YYYY"}}</time></div>
        
				<h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
		
        </header>

        <section class="post-content">
			{{#if feature_image}}
				<a href="#" data-featherlight="{{img_url feature_image}}"><img src="{{img_url feature_image}}" class="feature_image"></a>
			{{/if}}
            {{content}}
			
			{{#if tags}}<div class="tagwrapper"><div class="post-data tags">{{tags prefix="" separator=""}}</div></div>{{/if}}
        </section>

        <footer class="post-footer">
		

            {{#primary_author}}
            <section class="author">
                <div class="authordesc">
					<h4>via <a href="{{website}}">{{name}}</a></h4>
				</div>
			</section>
            {{/primary_author}}

        </footer>

        {{/post}}

    </article>

</main>
