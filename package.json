    "config": {
        "posts_per_page": 7,
		"image_sizes": {
            "s": {
                "width": 324
            },
            "m": {
                "width": 560
            },
            "l": {
                "width": 1024
            },
            "xl": {
                "width": 1920
            }
        }
    },
	"imageOptimization": {
        "resize": true
    }
