{
    "name": "half-full",
    "description": "Minimalisic theme for ghost",
    "version": "0.9.3",
    "engines": {
        "ghost": ">=3.0.0"
    },
    "license": "MIT",
    "author": {
		"name": "Dion Tautkus",
        "email": "dion.tautkus@gmail.com"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
	"repository": {
        "type": "git",
        "url": "https://github.com/katerkalu/halffull_theme.git"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
